{{!-- 
  Leave Balance Card Partial
  Usage: {{> leave/balance-card balance=balance}}
--}}
<div class="leave-balance-card">
  <div class="leave-balance-type" style="color: {{balance.color}};">
    {{balance.leaveTypeName}}
  </div>
  <div class="leave-balance-value" style="color: {{balance.color}};">
    {{balance.available}}
  </div>
  <div class="leave-balance-label">Available</div>
  <div class="mt-2" style="font-size: 11px; color: #94a3b8;">
    <span>Used: {{balance.used}}</span> |
    <span>Pending: {{balance.pending}}</span>
  </div>
</div>

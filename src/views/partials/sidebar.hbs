      <a class="nav-item {{#if (eq active 'billing')}}active{{/if}}" href="/billing" data-bs-toggle="tooltip" data-bs-placement="right" title="Billing & Plan">
        <i class="nav-icon fas fa-crown"></i>
        <span class="nav-label">Billing & Plan</span>
      </a>
      <a class="nav-item {{#if (eq active 'salary-templates')}}active{{/if}}" href="/salary-templates" data-bs-toggle="tooltip" data-bs-placement="right" title="Salary Templates">
        <i class="nav-icon fas fa-layer-group"></i>
        <span class="nav-label">Salary Templates</span>
      </a>
      <a class="nav-item {{#if (eq active 'team')}}active{{/if}}" href="/admin/team" data-bs-toggle="tooltip" data-bs-placement="right" title="Team & Roles">
        <i class="nav-icon fas fa-users-cog"></i>
        <span class="nav-label">Team & Roles</span>
      </a>
      <a class="nav-item {{#if (eq active 'profile')}}active{{/if}}" href="/admin/profile" data-bs-toggle="tooltip" data-bs-placement="right" title="My Profile">

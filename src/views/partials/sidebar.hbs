        </button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<style>
  /* Enterprise Sidebar CSS Variables */
  :root {
    --sidebar-bg: #0F172A;
    --sidebar-hover: #111827;
    --accent: #6366F1;
    --accent-soft: rgba(99, 102, 241, 0.14);
    --text-primary: #E5E7EB;
    --text-secondary: #9CA3AF;
    --divider: rgba(255, 255, 255, 0.06);
  }

  /* Import Inter Font */
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');

  /* Sidebar Container */
  .sidebar-enterprise {
    width: 260px;
    height: 100vh;
    background: var(--sidebar-bg);
    display: flex;
    flex-direction: column;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 1040;
    transition: width 0.18s ease;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    overflow-y: auto;
    overflow-x: hidden;
  }

  .sidebar-enterprise.collapsed {
    width: 72px;
  }

  /* Sidebar Toggle Button */
  .sidebar-toggle-btn {
    position: absolute;
    top: 16px;
    right: 12px;
    width: 32px;
    height: 32px;
    background: transparent;
    border: 1px solid var(--divider);
    border-radius: 6px;
    color: var(--text-secondary);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.18s ease;
    z-index: 10;
  }

  .sidebar-toggle-btn:hover {
    background: var(--sidebar-hover);
    color: var(--text-primary);
    border-color: var(--divider);
  }

  .sidebar-enterprise.collapsed .sidebar-toggle-btn i {
    transform: rotate(180deg);
  }

  /* Workspace Switcher */
  .sidebar-workspace {
    padding: 20px 16px 16px;
    border-bottom: 1px solid var(--divider);
  }

  .workspace-dropdown-btn {
    width: 100%;
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 0;
    background: transparent;
    border: none;
    color: var(--text-primary);
    font-size: 14.5px;
    font-weight: 500;
    cursor: pointer;
    transition: color 0.18s ease;
  }

  .workspace-dropdown-btn:hover {
    color: var(--text-primary);
  }

  .workspace-dropdown-btn i:first-child {
    color: var(--accent);
    font-size: 16px;
  }

  .workspace-arrow {
    margin-left: auto;
    font-size: 11px;
    color: var(--text-secondary);
    transition: transform 0.18s ease;
  }

  .workspace-dropdown-btn[aria-expanded="true"] .workspace-arrow {
    transform: rotate(180deg);
  }

  .sidebar-enterprise.collapsed .workspace-text,
  .sidebar-enterprise.collapsed .workspace-arrow {
    display: none;
  }

  /* User Profile */
  .sidebar-user {
    padding: 16px;
    display: flex;
    align-items: center;
    gap: 12px;
    border-bottom: 1px solid var(--divider);
  }

  .user-avatar {
    width: 36px;
    height: 36px;
    border-radius: 8px;
    background: var(--accent-soft);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--accent);
    font-size: 16px;
    flex-shrink: 0;
  }

  .user-info {
    flex: 1;
    min-width: 0;
  }

  .user-name {
    font-size: 14.5px;
    font-weight: 500;
    color: var(--text-primary);
    line-height: 1.4;
  }

  .user-role {
    font-size: 12px;
    color: var(--text-secondary);
    line-height: 1.4;
    margin-top: 2px;
  }

  .sidebar-enterprise.collapsed .user-info {
    display: none;
  }

  /* Notification */
  .sidebar-notification {
    padding: 0 16px 16px;
  }

  .notification-link {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 10px 12px;
    background: rgba(251, 191, 36, 0.1);
    border: 1px solid rgba(251, 191, 36, 0.2);
    border-radius: 8px;
    color: #FBBF24;
    text-decoration: none;
    font-size: 13px;
    font-weight: 500;
    transition: all 0.18s ease;
  }

  .notification-link:hover {
    background: rgba(251, 191, 36, 0.15);
    color: #FCD34D;
  }

  .notification-badge {
    margin-left: auto;
    background: #EF4444;
    color: white;
    font-size: 11px;
    font-weight: 600;
    padding: 2px 6px;
    border-radius: 10px;
    min-width: 18px;
    text-align: center;
  }

  .sidebar-enterprise.collapsed .notification-text {
    display: none;
  }

  /* CTA Button */
  .sidebar-cta {
    padding: 0 16px 16px;
  }

  .cta-button {
    width: 100%;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    background: var(--accent);
    color: white;
    border: none;
    border-radius: 10px;
    font-size: 14.5px;
    font-weight: 600;
    text-decoration: none;
    transition: background 0.18s ease;
  }

  .cta-button:hover {
    background: #5855EB;
    color: white;
  }

  .sidebar-enterprise.collapsed .cta-text {
    display: none;
  }

  .sidebar-enterprise.collapsed .cta-button {
    width: 44px;
    height: 44px;
    padding: 0;
    border-radius: 10px;
  }

  /* Navigation */
  .sidebar-nav {
    flex: 1;
    padding: 8px 0;
    overflow-y: auto;
    overflow-x: hidden;
  }

  /* Section Label */
  .section-label {
    font-size: 11px;
    letter-spacing: 0.08em;
    font-weight: 600;
    color: var(--text-secondary);
    text-transform: uppercase;
    padding: 16px 20px 8px;
    margin-top: 8px;
  }

  .nav-section:first-child .section-label {
    margin-top: 0;
  }

  .sidebar-enterprise.collapsed .section-label {
    display: none;
  }

  /* Nav Item */
  .nav-item {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 10px 20px;
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 14.5px;
    font-weight: 500;
    border-radius: 0;
    transition: all 0.18s ease;
    cursor: pointer;
    border: none;
    background: transparent;
    width: 100%;
    text-align: left;
    position: relative;
  }

  .nav-item:hover {
    background: var(--sidebar-hover);
    color: var(--text-primary);
  }

  .nav-item.active {
    background: var(--accent-soft);
    color: var(--text-primary);
    border-left: 3px solid var(--accent);
    border-radius: 0 8px 8px 0;
  }

  .nav-icon {
    width: 20px;
    text-align: center;
    font-size: 16px;
    color: var(--text-secondary);
    transition: color 0.18s ease;
  }

  .nav-item:hover .nav-icon,
  .nav-item.active .nav-icon {
    color: var(--text-primary);
  }

  .nav-label {
    flex: 1;
  }

  .sidebar-enterprise.collapsed .nav-label {
    display: none;
  }

  .sidebar-enterprise.collapsed .nav-item {
    justify-content: center;
    padding: 10px;
  }

  /* Nav Group (Collapsible) */
  .nav-group-toggle {
    position: relative;
  }

  .nav-arrow {
    font-size: 11px;
    color: var(--text-secondary);
    transition: transform 0.18s ease, color 0.18s ease;
    margin-left: auto;
  }

  .nav-group-toggle[aria-expanded="true"] .nav-arrow {
    transform: rotate(180deg);
  }

  .nav-group-toggle:hover .nav-arrow,
  .nav-group-toggle.active .nav-arrow {
    color: var(--text-primary);
  }

  .sidebar-enterprise.collapsed .nav-arrow {
    display: none;
  }

  /* Nav Group Menu (Children) */
  .nav-group-menu {
    padding-left: 0;
  }

  .nav-item-child {
    padding-left: 52px;
    font-size: 14px;
  }

  .sidebar-enterprise.collapsed .nav-group-menu {
    display: none !important;
  }

  /* Section Bottom */
  .nav-section-bottom {
    margin-top: auto;
    padding-top: 24px;
    border-top: 1px solid var(--divider);
  }

  /* Logout */
  .sidebar-footer {
    padding: 16px;
    border-top: 1px solid var(--divider);
  }

  .nav-item-logout {
    color: #EF4444;
  }

  .nav-item-logout:hover {
    background: rgba(239, 68, 68, 0.1);
    color: #F87171;
  }

  .nav-item-logout .nav-icon {
    color: #EF4444;
  }

  .nav-item-logout:hover .nav-icon {
    color: #F87171;
  }


        {{else}}
        <button class="nav-item nav-group-toggle" data-bs-toggle="collapse" data-bs-target="#payrollOperationsSubmenu" aria-expanded="false">
        {{/if}}
          <i class="nav-icon fas fa-play-circle"></i>
          <span class="nav-label">Operations</span>
          <i class="nav-arrow fas fa-chevron-down"></i>
        </button>
        {{#if (or (eq active 'payroll-runs') (eq active 'payroll-register') (eq active 'payroll-payslips'))}}
        <div class="nav-group-menu collapse show" id="payrollOperationsSubmenu">
        {{else}}
        <div class="nav-group-menu collapse" id="payrollOperationsSubmenu">
        {{/if}}
          <a class="nav-item nav-item-child {{#if (eq active 'payroll-runs')}}active{{/if}}" href="/admin/payroll/runs">
            <i class="nav-icon fas fa-play-circle"></i>
            <span class="nav-label">Payroll Runs</span>
          </a>
          <a class="nav-item nav-item-child {{#if (eq active 'payroll-register')}}active{{/if}}" href="/admin/payroll/register">
            <i class="nav-icon fas fa-list"></i>
            <span class="nav-label">Payroll Register</span>
          </a>
          <a class="nav-item nav-item-child {{#if (eq active 'payroll-payslips')}}active{{/if}}" href="/admin/payroll/payslips">

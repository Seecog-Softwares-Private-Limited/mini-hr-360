        {{else}}
        <button class="nav-item nav-group-toggle" data-bs-toggle="collapse" data-bs-target="#payrollStructureSubmenu" aria-expanded="false">
        {{/if}}
          <i class="nav-icon fas fa-sitemap"></i>
          <span class="nav-label">Structure</span>
          <i class="nav-arrow fas fa-chevron-down"></i>
        </button>
        {{#if (or (eq active 'payroll-structures') (eq active 'payroll-configuration') (eq active 'salary-templates') (eq active 'compensation-config'))}}
        <div class="nav-group-menu collapse show" id="payrollStructureSubmenu">
        {{else}}
        <div class="nav-group-menu collapse" id="payrollStructureSubmenu">
        {{/if}}
          <a class="nav-item nav-item-child {{#if (eq active 'payroll-structures')}}active{{/if}}" href="/admin/payroll/structures">
            <i class="nav-icon fas fa-sitemap"></i>
            <span class="nav-label">Salary Structures</span>
          </a>
          <a class="nav-item nav-item-child {{#if (eq active 'payroll-configuration')}}active{{/if}}" href="/payroll-configuration">
            <i class="nav-icon fas fa-cogs"></i>
            <span class="nav-label">Compensation Configuration</span>
          </a>
        </div>
      </div>

      {{!-- Payroll Compliance --}}

        {{#if (or (eq active 'payroll-statutory') (eq active 'payroll-queries'))}}
        <button class="nav-item nav-group-toggle active" data-bs-toggle="collapse" data-bs-target="#payrollComplianceSubmenu" aria-expanded="true">
        {{else}}
        <button class="nav-item nav-group-toggle" data-bs-toggle="collapse" data-bs-target="#payrollComplianceSubmenu" aria-expanded="false">
        {{/if}}
          <i class="nav-icon fas fa-balance-scale"></i>
          <span class="nav-label">Compliance</span>
          <i class="nav-arrow fas fa-chevron-down"></i>
        </button>
        {{#if (or (eq active 'payroll-statutory') (eq active 'payroll-queries'))}}
        <div class="nav-group-menu collapse show" id="payrollComplianceSubmenu">
        {{else}}
        <div class="nav-group-menu collapse" id="payrollComplianceSubmenu">
        {{/if}}
          <a class="nav-item nav-item-child {{#if (eq active 'payroll-statutory')}}active{{/if}}" href="/admin/payroll/statutory">
            <i class="nav-icon fas fa-balance-scale"></i>
            <span class="nav-label">Statutory Reports</span>
          </a>
          <a class="nav-item nav-item-child {{#if (eq active 'payroll-queries')}}active{{/if}}" href="/admin/payroll/queries">
            <i class="nav-icon fas fa-comments"></i>
            <span class="nav-label">Payroll Queries</span>
          </a>
        </div>
      </div>
    </div>

    {{!-- Organization Section --}}
    <div class="nav-section">
      <div class="section-label">Organization</div>
      
      <a class="nav-item {{#if (eq active 'departments')}}active{{/if}}" href="/departments" data-bs-toggle="tooltip" data-bs-placement="right" title="Departments">
        <i class="nav-icon fas fa-building-columns"></i>
        <span class="nav-label">Departments</span>
      </a>
      <a class="nav-item {{#if (eq active 'designations')}}active{{/if}}" href="/designations" data-bs-toggle="tooltip" data-bs-placement="right" title="Designations">
        <i class="nav-icon fas fa-id-badge"></i>
        <span class="nav-label">Designations</span>
      </a>
      <a class="nav-item {{#if (eq active 'businessAddresses')}}active{{/if}}" href="/business-addresses" data-bs-toggle="tooltip" data-bs-placement="right" title="Business Addresses">
        <i class="nav-icon fas fa-map-marker-alt"></i>
        <span class="nav-label">Business Addresses</span>
      </a>
    </div>

    {{!-- Documents Section --}}
    <div class="nav-section">
      <div class="section-label">Documents</div>
      
      <a class="nav-item {{#if (eq active 'documents')}}active{{/if}}" href="/documents" data-bs-toggle="tooltip" data-bs-placement="right" title="Generate Documents">
        <i class="nav-icon fas fa-file-signature"></i>
        <span class="nav-label">Generate Documents</span>
      </a>
      <a class="nav-item {{#if (eq active 'documentTypes')}}active{{/if}}" href="/document-types" data-bs-toggle="tooltip" data-bs-placement="right" title="Document Templates">
        <i class="nav-icon fas fa-layer-group"></i>
        <span class="nav-label">Document Templates</span>
      </a>
      <a class="nav-item {{#if (eq active 'emailTemplates')}}active{{/if}}" href="/email-templates" data-bs-toggle="tooltip" data-bs-placement="right" title="Email Templates">

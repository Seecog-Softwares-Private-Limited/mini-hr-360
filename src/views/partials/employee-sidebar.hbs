{{!--
Employee Portal Sidebar Partial
Usage: {{> employee-sidebar employee=employee active=active}}
--}}
<div class="col-md-2 emp-sidebar p-3">
    <div class="emp-brand mb-4">
        <div class="emp-brand-mark">
            <i class="fa-solid fa-user-tie"></i>
        </div>
        <div>
            <div class="emp-brand-title">mini-hr-360</div>
            <div class="emp-brand-subtitle">Employee Portal</div>
        </div>
    </div>

    <div class="emp-profile mb-3">
        <div class="emp-profile-avatar">
            <i class="fa-solid fa-user"></i>
        </div>
        <div>
            <div class="emp-profile-name">{{employee.empName}}</div>
            <div class="emp-profile-role">{{employee.empId}}</div>
        </div>
    </div>

    <div class="emp-divider"></div>

    <nav class="nav flex-column">
        <a class="nav-link {{#if (eq active 'dashboard')}}active{{/if}}" href="/employee/dashboard">
            <i class="fa-solid fa-house"></i> Dashboard
        </a>
        <a class="nav-link {{#if (eq active 'leaves')}}active{{/if}}" href="/employee/leaves">
            <i class="fa-solid fa-calendar-days"></i> My Leaves
        </a>
        <a class="nav-link {{#if (eq active 'apply-leave')}}active{{/if}}" href="/employee/leaves/apply">
            <i class="fa-solid fa-plus-circle"></i> Apply Leave
        </a>
    </nav>

    <div class="emp-divider"></div>

    <nav class="nav flex-column">
        <a class="nav-link {{#if (eq active 'attendance')}}active{{/if}}" href="/employee/attendance">
            <i class="fa-solid fa-clock"></i> Attendance
        </a>
        <div class="ps-3">
            <a class="nav-link small {{#if (eq active 'attendance_today')}}active{{/if}}" href="/employee/attendance/today">Today</a>
            <a class="nav-link small {{#if (eq active 'attendance_calendar')}}active{{/if}}" href="/employee/attendance/calendar">Calendar</a>
            <a class="nav-link small {{#if (eq active 'attendance_regularizations')}}active{{/if}}" href="/employee/attendance/regularizations">Regularizations</a>
            <a class="nav-link small {{#if (eq active 'attendance_request')}}active{{/if}}" href="/employee/attendance/regularization_form">New Request</a>
        </div>
    </nav>

    <div class="emp-divider"></div>

    <nav class="nav flex-column">
        <a class="nav-link {{#if (eq active 'payroll_payslips')}}active{{/if}}" href="/employee/payroll/payslips">
            <i class="fa-solid fa-file-invoice-dollar"></i> My Payslips
        </a>
        <a class="nav-link {{#if (eq active 'payroll_bank_tax')}}active{{/if}}" href="/employee/payroll/bank-tax">
            <i class="fa-solid fa-bank"></i> Bank & Tax
        </a>
        <a class="nav-link {{#if (eq active 'payroll_salary_details')}}active{{/if}}" href="/employee/payroll/salary-details">
            <i class="fa-solid fa-chart-bar"></i> Salary Details
        </a>
        <a class="nav-link {{#if (eq active 'payroll_queries')}}active{{/if}}" href="/employee/payroll/queries">
            <i class="fa-solid fa-comments"></i> Payroll Queries
        </a>
    </nav>

    <nav class="nav flex-column">
        <a class="nav-link {{#if (eq active 'profile')}}active{{/if}}" href="/employee/profile">
            <i class="fa-solid fa-user-circle"></i> My Profile
        </a>

        <a class="nav-link text-danger" href="/employee/logout">
            <i class="fa-solid fa-right-from-bracket"></i> Logout
        </a>
    </nav>
</div>
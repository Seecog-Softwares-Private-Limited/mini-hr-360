{{!-- Attendance Assignments (Refined) --}}
 
<div class="container-fluid">
	<div class="row">
		<div class="col-md-3 col-lg-2 px-0">
			{{> sidebar active="attendance-assignments" activeGroup="attendance"}}
		</div>
		<div class="col-md-9 col-lg-10">
			<div class="main-content p-4">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb mb-3 bg-transparent p-0">
						<li class="breadcrumb-item"><a href="/admin">Admin</a></li>
						<li class="breadcrumb-item"><a href="/admin/attendance">Attendance</a></li>
						<li class="breadcrumb-item active" aria-current="page">Assignments</li>
					</ol>
				</nav>

				<div class="d-flex justify-content-between align-items-center mb-3">
					<h2 class="mb-0">Assignments</h2>
					<div>
						<button class="btn btn-outline-secondary me-2" onclick="refreshAssignments()"><i class="fa-solid fa-sync"></i></button>
						<button class="btn btn-primary" onclick="openAddAssignmentModal()"><i class="fa-solid fa-plus me-2"></i> Assign Shift</button>
					</div>
				</div>

				<div class="card">
					<div class="card-body p-3">
						<div class="row g-3 mb-3">
							<div class="col-md-4">
								<input type="text" id="assignmentSearch" class="form-control" placeholder="Search by employee..." oninput="filterAssignments()">
							</div>
							<div class="col-md-4">
								<select id="assignmentShift" class="form-select" onchange="filterAssignments()">
									<option value="">All Shifts</option>
									{{#each shifts}}
									<option value="{{this.id}}">{{this.name}}</option>
									{{/each}}
								</select>
							</div>
							<div class="col-md-4 text-end">
								<small class="text-muted">Manage which employees belong to which shift.</small>
							</div>
						</div>

						<div class="table-responsive">
							<table class="table table-hover mb-0">
								<thead>
									<tr>
										<th>#</th>
										<th>Employee</th>
										<th>Department</th>
										<th>Shift</th>
										<th>Effective From</th>
										<th>Status</th>
										<th style="width:120px;">Actions</th>
									</tr>
								</thead>
								<tbody id="assignmentsTableBody">
									{{#each assignments}}
									<tr>
										<td>{{inc @index}}</td>
										<td>{{this.employeeName}}</td>
										<td>{{this.department}}</td>
										<td>{{this.shiftName}}</td>
										<td>{{this.effectiveFrom}}</td>
										<td>{{#if (eq this.status 'ACTIVE')}}<span class="badge bg-success">Active</span>{{else}}<span class="badge bg-secondary">Inactive</span>{{/if}}</td>
										<td>
											<div class="btn-group btn-group-sm">
												<button class="btn btn-outline-primary" onclick="editAssignment({{this.id}})"><i class="fa-solid fa-edit"></i></button>
												<button class="btn btn-outline-danger" onclick="deleteAssignment({{this.id}})"><i class="fa-solid fa-trash"></i></button>
											</div>
										</td>
									</tr>
									{{/each}}
								</tbody>
							</table>
						</div>
					</div>
				</div>

				{{> attendance-modals }}
				<script src="/assets/js/admin-attendance.js"></script>
			</div>
		</div>
	</div>
</div>
 
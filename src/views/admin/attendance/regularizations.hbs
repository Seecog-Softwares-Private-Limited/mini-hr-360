{{!-- Attendance Regularizations (Refined) --}}
 
<div class="container-fluid">
	<div class="row">
		<div class="col-md-3 col-lg-2 px-0">
			{{> sidebar active="attendance-regularizations" activeGroup="attendance"}}
		</div>
		<div class="col-md-9 col-lg-10">
			<div class="main-content p-4">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb mb-3 bg-transparent p-0">
						<li class="breadcrumb-item"><a href="/admin">Admin</a></li>
						<li class="breadcrumb-item"><a href="/admin/attendance">Attendance</a></li>
						<li class="breadcrumb-item active" aria-current="page">Regularizations</li>
					</ol>
				</nav>

				<div class="d-flex justify-content-between align-items-center mb-3">
					<h2 class="mb-0">Regularizations</h2>
					<div>
						<button class="btn btn-outline-secondary me-2" onclick="refreshRegularizations()"><i class="fa-solid fa-sync"></i></button>
						<button class="btn btn-primary" onclick="openAddRegularizationModal()"><i class="fa-solid fa-plus me-2"></i> Add Regularization</button>
					</div>
				</div>

				<div class="card">
					<div class="card-body p-3">
						<div class="row g-3 mb-3">
							<div class="col-md-4">
								<input type="text" id="regularizeSearch" class="form-control" placeholder="Search by employee or reason..." oninput="filterRegularizations()">
							</div>
							<div class="col-md-4">
								<select id="regularizeStatus" class="form-select" onchange="filterRegularizations()">
									<option value="">All</option>
									<option value="PENDING">Pending</option>
									<option value="APPROVED">Approved</option>
									<option value="REJECTED">Rejected</option>
								</select>
							</div>
							<div class="col-md-4 text-end">
								<small class="text-muted">Managers can approve or reject requests from this screen.</small>
							</div>
						</div>

						<div class="table-responsive">
							<table class="table table-hover mb-0">
								<thead>
									<tr>
										<th>#</th>
										<th>Employee</th>
										<th>Date</th>
										<th>Reason</th>
										<th>Status</th>
										<th style="width:140px;">Actions</th>
									</tr>
								</thead>
								<tbody id="regularizationsTableBody">
									{{#each regularizations}}
									<tr>
										<td>{{inc @index}}</td>
										<td>{{this.employeeName}}</td>
										<td>{{this.date}}</td>
										<td>{{this.reason}}</td>
										<td>{{#if (eq this.status 'PENDING')}}<span class="badge bg-warning text-dark">Pending</span>{{/if}}{{#if (eq this.status 'APPROVED')}}<span class="badge bg-success">Approved</span>{{/if}}{{#if (eq this.status 'REJECTED')}}<span class="badge bg-danger">Rejected</span>{{/if}}</td>
										<td>
											<div class="btn-group btn-group-sm">
												<button class="btn btn-outline-success" onclick="approveRegularization({{this.id}})"><i class="fa-solid fa-check"></i></button>
												<button class="btn btn-outline-danger" onclick="rejectRegularization({{this.id}})"><i class="fa-solid fa-times"></i></button>
												<button class="btn btn-outline-primary" onclick="viewRegularization({{this.id}})"><i class="fa-solid fa-eye"></i></button>
											</div>
										</td>
									</tr>
									{{/each}}
								</tbody>
							</table>
						</div>
					</div>
				</div>

				{{> attendance-modals }}
				<script src="/assets/js/admin-attendance.js"></script>
			</div>
		</div>
	</div>
</div>
 
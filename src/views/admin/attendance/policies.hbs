{{!-- Attendance Policies (Refined) --}}
 
<div class="container-fluid">
	<div class="row">
		<div class="col-md-3 col-lg-2 px-0">
			{{> sidebar active="attendance-policies" activeGroup="attendance"}}
		</div>
		<div class="col-md-9 col-lg-10">
			<div class="main-content p-4">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb mb-3 bg-transparent p-0">
						<li class="breadcrumb-item"><a href="/admin">Admin</a></li>
						<li class="breadcrumb-item"><a href="/admin/attendance">Attendance</a></li>
						<li class="breadcrumb-item active" aria-current="page">Policies</li>
					</ol>
				</nav>

				<div class="d-flex justify-content-between align-items-center mb-3">
					<h2 class="mb-0">Policies</h2>
					<div>
						<button class="btn btn-outline-secondary me-2" onclick="refreshPolicies()"><i class="fa-solid fa-sync"></i></button>
						<button class="btn btn-primary" onclick="openAddPolicyModal()"><i class="fa-solid fa-plus me-2"></i> Add Policy</button>
					</div>
				</div>

				<div class="card">
					<div class="card-body p-3">
						<div class="row g-3 mb-3">
							<div class="col-md-4">
								<input type="text" id="policySearch" class="form-control" placeholder="Search policies..." oninput="filterPolicies()">
							</div>
							<div class="col-md-3">
								<select id="policyStatus" class="form-select" onchange="filterPolicies()">
									<option value="">All Status</option>
									<option value="ACTIVE">Active</option>
									<option value="INACTIVE">Inactive</option>
								</select>
							</div>
							<div class="col-md-5 text-end">
								<small class="text-muted">Policies can include shift rules, grace periods and overtime rules.</small>
							</div>
						</div>

						<div class="table-responsive">
							<table class="table table-hover mb-0">
								<thead>
									<tr>
										<th>#</th>
										<th>Name & Summary</th>
										<th>Effective From</th>
										<th>Status</th>
										<th style="width:140px;">Actions</th>
									</tr>
								</thead>
								<tbody id="policiesTableBody">
									{{#each policies}}
									<tr>
										<td>{{inc @index}}</td>
										<td>
											<div style="font-weight:600;">{{this.name}}</div>
											<small class="text-muted d-block">{{this.shortDescription}}</small>
										</td>
										<td>{{this.effectiveFrom}}</td>
										<td>{{#if (eq this.status 'ACTIVE')}}<span class="badge bg-success">Active</span>{{else}}<span class="badge bg-secondary">Inactive</span>{{/if}}</td>
										<td>
											<div class="btn-group btn-group-sm">
												<button class="btn btn-outline-primary" onclick="editPolicy({{this.id}})"><i class="fa-solid fa-edit"></i></button>
												<button class="btn btn-outline-danger" onclick="deletePolicy({{this.id}})"><i class="fa-solid fa-trash"></i></button>
											</div>
										</td>
									</tr>
									{{/each}}
								</tbody>
							</table>
						</div>
					</div>
				</div>

				{{> attendance-modals }}
				<script src="/assets/js/admin-attendance.js"></script>
			</div>
		</div>
	</div>
</div>
 
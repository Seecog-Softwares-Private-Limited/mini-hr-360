{{!-- Attendance Logs (Refined) --}}
 
<div class="container-fluid">
	<div class="row">
		<div class="col-md-3 col-lg-2 px-0">
			{{> sidebar active="attendance-logs" activeGroup="attendance"}}
		</div>
		<div class="col-md-9 col-lg-10">
			<div class="main-content p-4">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb mb-3 bg-transparent p-0">
						<li class="breadcrumb-item"><a href="/admin">Admin</a></li>
						<li class="breadcrumb-item"><a href="/admin/attendance">Attendance</a></li>
						<li class="breadcrumb-item active" aria-current="page">Logs</li>
					</ol>
				</nav>

				<div class="d-flex justify-content-between align-items-center mb-3">
					<h2 class="mb-0">Logs</h2>
					<div>
						<button class="btn btn-outline-secondary me-2" onclick="refreshLogs()"><i class="fa-solid fa-sync"></i></button>
						<button class="btn btn-primary" onclick="downloadLogs()"><i class="fa-solid fa-download me-2"></i> Export</button>
					</div>
				</div>

				<div class="card">
					<div class="card-body p-3">
						<div class="row g-3 mb-3">
							<div class="col-md-3">
								<input type="date" id="logDate" class="form-control" onchange="filterLogs()">
							</div>
							<div class="col-md-3">
								<select id="logDevice" class="form-select" onchange="filterLogs()">
									<option value="">All Devices</option>
									<option value="WEB">Web</option>
									<option value="MOBILE">Mobile</option>
								</select>
							</div>
							<div class="col-md-6 text-end">
								<input type="text" id="logSearch" class="form-control d-inline-block" placeholder="Search employee or IP..." style="width: 320px;" oninput="filterLogs()">
							</div>
						</div>

						<div class="table-responsive">
							<table class="table table-hover mb-0">
								<thead>
									<tr>
										<th>#</th>
										<th>Employee</th>
										<th>Date</th>
										<th>Check-in</th>
										<th>Check-out</th>
										<th>Status</th>
										<th>Device</th>
										<th>IP</th>
										<th style="width:120px;">Actions</th>
									</tr>
								</thead>
								<tbody id="logsTableBody">
									{{#each logs}}
									<tr>
										<td>{{inc @index}}</td>
										<td>{{this.employeeName}}</td>
										<td>{{this.date}}</td>
										<td>{{this.checkIn}}</td>
										<td>{{this.checkOut}}</td>
										<td>{{#if (eq this.status 'PRESENT')}}<span class="badge bg-success">Present</span>{{/if}}{{#if (eq this.status 'ABSENT')}}<span class="badge bg-danger">Absent</span>{{/if}}{{#if (eq this.status 'LATE')}}<span class="badge bg-warning text-dark">Late</span>{{/if}}</td>
										<td>{{this.device}}</td>
										<td>{{this.ip}}</td>
										<td>
											<button class="btn btn-outline-primary btn-sm" onclick="viewLogDetails({{this.id}})">Details</button>
										</td>
									</tr>
									{{/each}}
								</tbody>
							</table>
						</div>
					</div>
				</div>

				{{> attendance-modals }}
				<script src="/assets/js/admin-attendance.js"></script>
			</div>
		</div>
	</div>
</div>
 
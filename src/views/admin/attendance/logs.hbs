{{!-- Attendance Logs (Refined) --}}
 
<div class="container-fluid">
	<div class="row">
		<div class="col-md-3 col-lg-2 px-0">
			{{> sidebar active="attendance-logs" activeGroup="attendance"}}
		</div>
		<div class="col-md-9 col-lg-10">
			<div class="main-content p-4">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb mb-3 bg-transparent p-0">
						<li class="breadcrumb-item"><a href="/admin">Admin</a></li>
						<li class="breadcrumb-item"><a href="/admin/attendance">Attendance</a></li>
						<li class="breadcrumb-item active" aria-current="page">Logs</li>
					</ol>
				</nav>

				<div class="d-flex justify-content-between align-items-center mb-3">
					<h2 class="mb-0">Logs</h2>
					<div>
						<button class="btn btn-outline-secondary me-2" onclick="refreshLogs()"><i class="fa-solid fa-sync"></i></button>
						<button class="btn btn-primary" onclick="downloadLogs()"><i class="fa-solid fa-download me-2"></i> Export</button>
					</div>
				</div>

				<div class="card shadow-sm">
					<div class="card-header bg-gradient pb-3 pt-3 border-0">
						<div class="d-flex justify-content-between align-items-center">
							<h5 class="mb-0"><i class="fa-solid fa-list me-2 text-primary"></i>Attendance Logs</h5>
							<div class="d-flex gap-2">
								<button class="btn btn-outline-secondary btn-sm" onclick="refreshLogs()" title="Refresh"><i class="fa-solid fa-rotate-right"></i></button>
								<button class="btn btn-outline-success btn-sm" onclick="downloadLogs()"><i class="fa-solid fa-download me-1"></i> Export</button>
							</div>
						</div>
					</div>
					<div class="card-body p-3">
						<div class="row g-2 mb-3">
							<div class="col-md-2">
								<input type="date" id="logDate" class="form-control form-control-sm" onchange="loadLogs()">
							</div>
							<div class="col-md-2">
								<select id="logStatus" class="form-select form-select-sm" onchange="filterLogs()">
									<option value="">All Status</option>
									<option value="PRESENT">Present</option>
									<option value="ABSENT">Absent</option>
									<option value="LATE">Late</option>
									<option value="HALF_DAY">Half Day</option>
									<option value="NOT_MARKED">Not Marked</option>
								</select>
							</div>
							<div class="col-md-4">
								<input type="text" id="logSearch" class="form-control form-control-sm" placeholder="Search employee, ID, or IP..." oninput="filterLogs()">
							</div>
							<div class="col-md-4 text-end">
								<span class="badge bg-secondary" id="logsCount">0 records</span>
							</div>
						</div>

						<div class="table-responsive">
							<table class="table table-hover table-striped mb-0">
								<thead class="table-light sticky-top">
									<tr>
										<th style="width: 50px;">#</th>
										<th>Employee</th>
										<th>Date</th>
										<th class="text-center">Check-in</th>
										<th class="text-center">Check-out</th>
										<th class="text-center">Status</th>
										<th>IP Address</th>
										<th style="width: 120px;" class="text-center">Actions</th>
									</tr>
								</thead>
								<tbody id="logsTableBody">
									<tr><td colspan="8" class="text-center text-muted py-3"><i class="fa-solid fa-spinner fa-spin me-2"></i>Loading...</td></tr>
								</tbody>
							</table>
						</div>
					</div>
					<div class="card-footer bg-light text-muted small py-2">
						<i class="fa-solid fa-info-circle me-1"></i>Last updated: <span id="logsLastUpdate">now</span>
					</div>
				</div>

				{{> attendance-modals }}
				<script src="/assets/js/admin-attendance.js"></script>
			</div>
		</div>
	</div>
</div>
 
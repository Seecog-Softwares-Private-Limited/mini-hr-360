{{!-- Attendance Holidays (Refined) --}}
 
<div class="container-fluid">
	<div class="row">
		<div class="col-md-3 col-lg-2 px-0">
			{{> sidebar active="attendance-holidays" activeGroup="attendance"}}
		</div>
		<div class="col-md-9 col-lg-10">
			<div class="main-content p-4">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb mb-3 bg-transparent p-0">
						<li class="breadcrumb-item"><a href="/admin">Admin</a></li>
						<li class="breadcrumb-item"><a href="/admin/attendance">Attendance</a></li>
						<li class="breadcrumb-item active" aria-current="page">Holidays</li>
					</ol>
				</nav>

				<div class="d-flex justify-content-between align-items-center mb-3">
					<h2 class="mb-0">Holidays</h2>
					<div>
						<button class="btn btn-outline-secondary me-2" onclick="refreshHolidays()"><i class="fa-solid fa-sync"></i></button>
						<button class="btn btn-primary" onclick="openAddHolidayModal()"><i class="fa-solid fa-plus me-2"></i> Add Holiday</button>
					</div>
				</div>

				<div class="card">
					<div class="card-body p-3">
						<div class="row g-3 mb-3">
							<div class="col-md-4">
								<input type="text" id="holidaySearch" class="form-control" placeholder="Search holiday..." oninput="filterHolidays()">
							</div>
							<div class="col-md-4 text-end">
								<small class="text-muted">Holidays can be company-wide or specific to business units.</small>
							</div>
						</div>

						<div class="table-responsive">
							<table class="table table-hover mb-0">
								<thead>
									<tr>
										<th>#</th>
										<th>Name</th>
										<th>Date</th>
										<th>Type</th>
										<th>Status</th>
										<th style="width:120px;">Actions</th>
									</tr>
								</thead>
								<tbody id="holidaysTableBody">
									{{#each holidays}}
									<tr>
										<td>{{inc @index}}</td>
										<td>{{this.name}}</td>
										<td>{{this.date}}</td>
										<td>{{this.type}}</td>
										<td>{{#if (eq this.status 'ACTIVE')}}<span class="badge bg-success">Active</span>{{else}}<span class="badge bg-secondary">Inactive</span>{{/if}}</td>
										<td>
											<div class="btn-group btn-group-sm">
												<button class="btn btn-outline-primary" onclick="editHoliday({{this.id}})"><i class="fa-solid fa-edit"></i></button>
												<button class="btn btn-outline-danger" onclick="deleteHoliday({{this.id}})"><i class="fa-solid fa-trash"></i></button>
											</div>
										</td>
									</tr>
									{{/each}}
								</tbody>
							</table>
						</div>
					</div>
				</div>

				{{> attendance-modals }}
				<script src="/assets/js/admin-attendance.js"></script>
			</div>
		</div>
	</div>
</div>
 
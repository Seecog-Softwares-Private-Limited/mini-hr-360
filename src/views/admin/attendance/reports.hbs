{{!-- Attendance Reports (Refined) --}}
 
<div class="container-fluid">
	<div class="row">
		<div class="col-md-3 col-lg-2 px-0">
			{{> sidebar active="attendance-reports" activeGroup="attendance"}}
		</div>
		<div class="col-md-9 col-lg-10">
			<div class="main-content p-4">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb mb-3 bg-transparent p-0">
						<li class="breadcrumb-item"><a href="/admin">Admin</a></li>
						<li class="breadcrumb-item"><a href="/admin/attendance">Attendance</a></li>
						<li class="breadcrumb-item active" aria-current="page">Reports</li>
					</ol>
				</nav>

				<div class="d-flex justify-content-between align-items-center mb-3">
					<h2 class="mb-0">Reports</h2>
					<div>
						<button class="btn btn-outline-secondary me-2" onclick="refreshReports()"><i class="fa-solid fa-sync"></i></button>
						<button class="btn btn-primary" onclick="downloadReport()"><i class="fa-solid fa-download me-2"></i> Download</button>
					</div>
				</div>

				<div class="card mb-4">
					<div class="card-body">
						<div class="row g-3 mb-3">
							<div class="col-md-3">
								<label class="form-label">Department</label>
								<select id="departmentFilter" class="form-select" onchange="filterReports()">
									<option value="">All</option>
								</select>
							</div>
							<div class="col-md-3">
								<label class="form-label">Employee</label>
								<select id="employeeFilter" class="form-select" onchange="filterReports()">
									<option value="">All</option>
								</select>
							</div>
							<div class="col-md-3">
								<label class="form-label">Date Range</label>
								<div class="d-flex gap-2">
									<input type="date" id="startDateFilter" class="form-control" onchange="filterReports()">
									<input type="date" id="endDateFilter" class="form-control" onchange="filterReports()">
								</div>
							</div>
							<div class="col-md-3 d-flex align-items-end gap-2">
								<button class="btn btn-primary" onclick="filterReports()">
									<i class="fa-solid fa-search me-1"></i> Filter
								</button>
								<button class="btn btn-secondary" onclick="clearFilters()">
									<i class="fa-solid fa-times me-1"></i> Clear
								</button>
							</div>
						</div>

						<div class="table-responsive">
							<table class="table table-hover mb-0">
								<thead>
									<tr>
										<th style="cursor: pointer;" onclick="sortReports('employee')">Employee <i class="fa-solid fa-sort"></i></th>
										<th style="cursor: pointer;" onclick="sortReports('department')">Department <i class="fa-solid fa-sort"></i></th>
										<th style="cursor: pointer;" onclick="sortReports('date')">Date <i class="fa-solid fa-sort"></i></th>
										<th style="cursor: pointer;" onclick="sortReports('status')">Status <i class="fa-solid fa-sort"></i></th>
										<th style="cursor: pointer;" onclick="sortReports('checkin')">Check-in <i class="fa-solid fa-sort"></i></th>
										<th style="cursor: pointer;" onclick="sortReports('checkout')">Check-out <i class="fa-solid fa-sort"></i></th>
										<th>Work Hours</th>
									</tr>
								</thead>
								<tbody id="reportsTableBody">
									<tr><td colspan="7" class="text-center text-muted">Loading reports...</td></tr>
								</tbody>
							</table>
						</div>
					</div>
				</div>

				{{> attendance-modals }}
				<script src="/assets/js/admin-attendance.js"></script>
			</div>
		</div>
	</div>
</div>
 
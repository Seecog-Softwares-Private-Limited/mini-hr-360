{{!-- views/admin/leave-balances.hbs --}}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-3 col-lg-2 px-0">
            {{> sidebar}}
        </div>

        <div class="col-md-9 col-lg-10">
            <div class="main-content p-4">
                <h2 class="mb-4">Leave Balances</h2>

                <!-- Filters -->
                <div class="card mb-4">
                    <div class="card-body">
                        <form method="GET" class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label">Business</label>
                                <select name="businessId" class="form-select">
                                    <option value="">All Businesses</option>
                                    {{#each businesses}}
                                    <option value="{{this.id}}" {{#if (eq ../currentBusinessId this.id)}}selected{{/if}}>{{this.businessName}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Year</label>
                                <select name="year" class="form-select">
                                    {{#each years}}
                                    <option value="{{this}}" {{#if (eq ../year this)}}selected{{/if}}>{{this}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="col-md-4 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa-solid fa-search me-1"></i> Apply Filters
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Employee Balances -->
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span><i class="fa-solid fa-wallet me-2"></i> Employee Leave Balances ({{year}})</span>
                        <span class="badge bg-secondary">{{employeeBalances.length}} employees</span>
                    </div>
                    <div class="card-body">
                        {{#if employeeBalances.length}}
                        {{#each employeeBalances}}
                        <div class="card mb-3">
                            <div class="card-header bg-light">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>{{this.employee.empName}}</strong>
                                        <span class="text-muted ms-2">{{this.employee.empId}}</span>
                                    </div>
                                    <div>
                                        <small class="text-muted">{{this.employee.empDepartment}}</small>
                                        {{#if this.employee.business}}
                                        <span class="badge bg-light text-dark ms-2">{{this.employee.business.businessName}}</span>
                                        {{/if}}
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    {{#each this.balances}}
                                    <div class="col-md-2 col-sm-4 col-6">
                                        <div class="text-center p-2 rounded" style="background: #f8f9fa;">
                                            <div style="font-size: 12px; font-weight: 600; color: {{this.color}};">
                                                {{this.leaveTypeName}}
                                            </div>
                                            <div style="font-size: 1.5rem; font-weight: 800; color: {{this.color}};">
                                                {{this.available}}
                                            </div>
                                            <div style="font-size: 11px; color: #64748b;">
                                                of {{this.allocated}} available
                                            </div>
                                            <div style="font-size: 10px; color: #94a3b8;" class="mt-1">
                                                Used: {{this.used}} | Pending: {{this.pending}}
                                            </div>
                                        </div>
                                    </div>
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                        {{/each}}
                        {{else}}
                        <div class="text-center py-5 text-muted">
                            <i class="fa-solid fa-users fa-3x mb-3"></i>
                            <h5>No employees found</h5>
                            <p>No active employees found for the selected filters.</p>
                        </div>
                        {{/if}}
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}} - Employee Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" rel="stylesheet">
    <style>
        :root {
            --emp-primary: #0ea5e9;
            --emp-primary-dark: #0284c7;
            --emp-secondary: #64748b;
            --emp-success: #22c55e;
            --emp-warning: #f59e0b;
            --emp-danger: #ef4444;
            --emp-sidebar-bg: linear-gradient(180deg, #0c4a6e 0%, #082f49 100%);
            --emp-body-bg: #f1f5f9;
        }

        body {
            background: var(--emp-body-bg);
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        }

        /* Sidebar */
        .emp-sidebar {
            min-height: 100vh;
            background: var(--emp-sidebar-bg);
            color: rgba(255, 255, 255, 0.9);
            box-shadow: 4px 0 20px rgba(0, 0, 0, 0.1);
        }

        .emp-sidebar .nav-link {
            color: rgba(255, 255, 255, 0.78);
            padding: 0.75rem 1rem;
            margin: 0.15rem 0;
            border-radius: 0.75rem;
            transition: all 150ms ease;
            display: flex;
            align-items: center;
            gap: 12px;
            font-weight: 600;
            font-size: 14px;
        }

        .emp-sidebar .nav-link:hover {
            color: #fff;
            background: rgba(255, 255, 255, 0.1);
        }

        .emp-sidebar .nav-link.active {
            color: #fff;
            background: rgba(14, 165, 233, 0.35);
            box-shadow: inset 0 0 0 1px rgba(14, 165, 233, 0.5);
        }

        .emp-sidebar .nav-link i {
            width: 20px;
            text-align: center;
        }

        .emp-brand {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 1.25rem 1rem;
        }

        .emp-brand-mark {
            width: 44px;
            height: 44px;
            border-radius: 12px;
            background: linear-gradient(135deg, var(--emp-primary) 0%, #06b6d4 100%);
            display: grid;
            place-items: center;
            color: #fff;
            font-weight: 700;
            font-size: 14px;
            box-shadow: 0 8px 20px rgba(14, 165, 233, 0.3);
        }

        .emp-brand-title {
            font-weight: 800;
            font-size: 16px;
            color: #fff;
        }

        .emp-brand-subtitle {
            font-size: 11px;
            color: rgba(255, 255, 255, 0.6);
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .emp-profile {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px;
            margin: 0 0.5rem;
            border-radius: 14px;
            background: rgba(255, 255, 255, 0.08);
        }

        .emp-profile-avatar {
            width: 44px;
            height: 44px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.15);
            display: grid;
            place-items: center;
            color: rgba(255, 255, 255, 0.9);
            font-size: 16px;
        }

        .emp-profile-name {
            font-weight: 700;
            font-size: 13px;
            color: #fff;
        }

        .emp-profile-role {
            font-size: 11px;
            color: rgba(255, 255, 255, 0.6);
        }

        .emp-divider {
            height: 1px;
            background: rgba(255, 255, 255, 0.1);
            margin: 1rem 0;
        }

        /* Main Content */
        .emp-main {
            min-height: 100vh;
            padding: 1.5rem;
        }

        .emp-page-header {
            margin-bottom: 1.5rem;
        }

        .emp-page-title {
            font-weight: 800;
            font-size: 1.75rem;
            color: #0f172a;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .emp-page-title::before {
            content: "";
            width: 4px;
            height: 28px;
            border-radius: 4px;
            background: linear-gradient(180deg, var(--emp-primary) 0%, #06b6d4 100%);
        }

        /* Cards */
        .emp-card {
            background: #fff;
            border-radius: 16px;
            border: 1px solid rgba(15, 23, 42, 0.06);
            box-shadow: 0 4px 20px rgba(15, 23, 42, 0.04);
            overflow: hidden;
        }

        .emp-card-header {
            padding: 1rem 1.25rem;
            background: rgba(15, 23, 42, 0.02);
            border-bottom: 1px solid rgba(15, 23, 42, 0.06);
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .emp-card-title {
            font-weight: 700;
            font-size: 1rem;
            color: #0f172a;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .emp-card-body {
            padding: 1.25rem;
        }

        /* Stats */
        .emp-stat-card {
            background: #fff;
            border-radius: 14px;
            padding: 1.25rem;
            border: 1px solid rgba(15, 23, 42, 0.06);
            box-shadow: 0 4px 16px rgba(15, 23, 42, 0.04);
            transition: transform 150ms ease, box-shadow 150ms ease;
        }

        .emp-stat-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 24px rgba(15, 23, 42, 0.08);
        }

        .emp-stat-icon {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            display: grid;
            place-items: center;
            color: #fff;
            font-size: 20px;
            margin-bottom: 1rem;
        }

        .emp-stat-value {
            font-size: 1.75rem;
            font-weight: 800;
            color: #0f172a;
            line-height: 1;
        }

        .emp-stat-label {
            font-size: 12px;
            font-weight: 600;
            color: #64748b;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            margin-top: 4px;
        }

        /* Status Badges */
        .emp-badge {
            display: inline-flex;
            align-items: center;
            padding: 4px 10px;
            border-radius: 999px;
            font-size: 12px;
            font-weight: 700;
        }

        .emp-badge-pending {
            background: rgba(245, 158, 11, 0.12);
            color: #b45309;
        }

        .emp-badge-approved {
            background: rgba(34, 197, 94, 0.12);
            color: #15803d;
        }

        .emp-badge-rejected {
            background: rgba(239, 68, 68, 0.12);
            color: #b91c1c;
        }

        .emp-badge-canceled {
            background: rgba(100, 116, 139, 0.12);
            color: #475569;
        }

        /* Buttons */
        .emp-btn-primary {
            background: linear-gradient(135deg, var(--emp-primary) 0%, #06b6d4 100%);
            border: none;
            color: #fff;
            padding: 10px 20px;
            border-radius: 10px;
            font-weight: 700;
            font-size: 14px;
            box-shadow: 0 4px 14px rgba(14, 165, 233, 0.25);
            transition: all 150ms ease;
        }

        .emp-btn-primary:hover {
            transform: translateY(-1px);
            box-shadow: 0 6px 20px rgba(14, 165, 233, 0.35);
            color: #fff;
        }

        .emp-btn-secondary {
            background: rgba(15, 23, 42, 0.06);
            border: 1px solid rgba(15, 23, 42, 0.1);
            color: #475569;
            padding: 10px 20px;
            border-radius: 10px;
            font-weight: 700;
            font-size: 14px;
            transition: all 150ms ease;
        }

        .emp-btn-secondary:hover {
            background: rgba(15, 23, 42, 0.1);
            color: #0f172a;
        }

        /* Tables */
        .emp-table {
            width: 100%;
        }

        .emp-table thead th {
            background: rgba(15, 23, 42, 0.03);
            padding: 12px 16px;
            font-size: 12px;
            font-weight: 700;
            color: #64748b;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            border-bottom: 1px solid rgba(15, 23, 42, 0.08);
        }

        .emp-table tbody td {
            padding: 14px 16px;
            border-bottom: 1px solid rgba(15, 23, 42, 0.05);
            font-size: 14px;
            color: #0f172a;
        }

        .emp-table tbody tr:hover {
            background: rgba(14, 165, 233, 0.04);
        }

        /* Balance Cards */
        .leave-balance-card {
            background: #fff;
            border-radius: 12px;
            padding: 1rem;
            border: 1px solid rgba(15, 23, 42, 0.08);
            text-align: center;
        }

        .leave-balance-type {
            font-size: 13px;
            font-weight: 700;
            color: #0f172a;
            margin-bottom: 8px;
        }

        .leave-balance-value {
            font-size: 2rem;
            font-weight: 800;
            line-height: 1;
        }

        .leave-balance-label {
            font-size: 11px;
            color: #64748b;
            margin-top: 4px;
        }

        /* Quick Actions */
        .quick-action {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 14px;
            background: #fff;
            border-radius: 12px;
            border: 1px solid rgba(15, 23, 42, 0.08);
            text-decoration: none;
            color: #0f172a;
            transition: all 150ms ease;
        }

        .quick-action:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 24px rgba(15, 23, 42, 0.08);
            color: #0f172a;
        }

        .quick-action-icon {
            width: 44px;
            height: 44px;
            border-radius: 10px;
            display: grid;
            place-items: center;
            color: #fff;
            font-size: 18px;
        }

        .quick-action-text {
            font-weight: 700;
            font-size: 14px;
        }

        /* Forms */
        .emp-form-label {
            font-size: 13px;
            font-weight: 700;
            color: #475569;
            margin-bottom: 6px;
        }

        .emp-form-control {
            border: 1px solid rgba(15, 23, 42, 0.12);
            border-radius: 10px;
            padding: 10px 14px;
            font-size: 14px;
            transition: all 150ms ease;
        }

        .emp-form-control:focus {
            border-color: var(--emp-primary);
            box-shadow: 0 0 0 3px rgba(14, 165, 233, 0.15);
        }

        /* Auth Pages */
        body.auth {
            background:
                radial-gradient(1200px 600px at 50% -10%, rgba(14, 165, 233, 0.15), rgba(255, 255, 255, 0)),
                radial-gradient(900px 500px at 110% 20%, rgba(6, 182, 212, 0.12), rgba(255, 255, 255, 0)),
                linear-gradient(180deg, #f1f5f9 0%, #e2e8f0 100%);
        }

        .emp-auth-shell {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 1rem;
        }

        .emp-auth-card {
            width: 100%;
            max-width: 420px;
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            border: 1px solid rgba(15, 23, 42, 0.08);
            box-shadow: 0 20px 50px rgba(15, 23, 42, 0.12);
            overflow: hidden;
        }

        .emp-auth-header {
            text-align: center;
            padding: 2rem 2rem 1.5rem;
        }

        .emp-auth-body {
            padding: 0 2rem 2rem;
        }

        .emp-auth-footer {
            padding: 1rem 2rem;
            background: rgba(15, 23, 42, 0.02);
            border-top: 1px solid rgba(15, 23, 42, 0.06);
            text-align: center;
            font-size: 13px;
            color: #64748b;
        }

        /* Pagination */
        .emp-pagination {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .emp-pagination .page-link {
            border-radius: 8px;
            padding: 8px 14px;
            font-weight: 600;
            font-size: 13px;
            border: 1px solid rgba(15, 23, 42, 0.1);
            color: #475569;
        }

        .emp-pagination .page-item.active .page-link {
            background: var(--emp-primary);
            border-color: var(--emp-primary);
        }

        /* Alert */
        .emp-alert {
            border-radius: 12px;
            padding: 14px 18px;
            border: none;
            font-weight: 600;
        }

        .emp-alert-success {
            background: rgba(34, 197, 94, 0.12);
            color: #15803d;
        }

        .emp-alert-danger {
            background: rgba(239, 68, 68, 0.12);
            color: #b91c1c;
        }

        .emp-alert-warning {
            background: rgba(245, 158, 11, 0.12);
            color: #b45309;
        }
    </style>
</head>
<body class="{{pageClass}}">
    {{{body}}}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        const EMP_API_BASE = `${window.location.origin}/employee`;

        async function empApiCall(endpoint, options = {}) {
            const headers = {
                'Content-Type': 'application/json',
                ...(options.headers || {})
            };

            try {
                const response = await fetch(`${EMP_API_BASE}${endpoint}`, {
                    credentials: 'include',
                    ...options,
                    headers
                });

                if (response.status === 401) {
                    window.location.replace('/employee/login');
                    return null;
                }

                return await response.json();
            } catch (error) {
                console.error('API Error:', error);
                throw error;
            }
        }

        function formatDate(dateStr) {
            if (!dateStr) return '-';
            const date = new Date(dateStr);
            return date.toLocaleDateString('en-IN', { 
                day: '2-digit', 
                month: 'short', 
                year: 'numeric' 
            });
        }

        function getStatusBadgeClass(status) {
            const map = {
                'PENDING': 'emp-badge-pending',
                'APPROVED': 'emp-badge-approved',
                'REJECTED': 'emp-badge-rejected',
                'CANCELED': 'emp-badge-canceled'
            };
            return map[status] || 'emp-badge-pending';
        }
    </script>
</body>
</html>

{{!-- Salary Template Management Page --}}
<div class="container-fluid">
  <div class="row">
    {{!-- Sidebar --}}
    <div class="col-md-3 col-lg-2 px-0">
      {{> sidebar}}
    </div>

    {{!-- Main content --}}
    <div class="col-md-9 col-lg-10">
      <div class="main-content p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <div>
            <h2 class="mb-0">
              <i class="fas fa-layer-group text-primary me-2"></i>Salary Templates
            </h2>
            <small class="text-muted">Manage salary structure templates for different employee types</small>
          </div>
          <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createTemplateModal">
            <i class="fas fa-plus me-2"></i>Create Template
          </button>
        </div>

        {{!-- Templates Grid --}}
        <div class="row" id="templatesContainer">
          <div class="col-12 text-center py-5">
            <div class="spinner-border text-primary" role="status">
              <span class="visually-hidden">Loading...</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{{!-- Create/Edit Template Modal --}}
<div class="modal fade" id="createTemplateModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header bg-primary text-white">
        <h5 class="modal-title">
          <i class="fas fa-layer-group me-2"></i><span id="templateModalTitle">Create Salary Template</span>
        </h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      <form id="templateForm">
        <div class="modal-body">
          <input type="hidden" id="templateId" name="id" />

          {{!-- Template Basic Info --}}
          <div class="row g-3 mb-4">
            <div class="col-md-6">
              <label class="form-label">
                <i class="fas fa-tag text-primary me-1"></i>Template Name <span class="text-danger">*</span>
              </label>
              <input type="text" class="form-control" id="templateName" name="name" required />
            </div>
            <div class="col-md-6">
              <label class="form-label">
                <i class="fas fa-calendar text-info me-1"></i>Effective From <span class="text-danger">*</span>
              </label>
              <input type="date" class="form-control" id="templateEffectiveFrom" name="effectiveFrom" required />
            </div>
            <div class="col-12">
              <label class="form-label">
                <i class="fas fa-align-left text-secondary me-1"></i>Description
              </label>
              <textarea class="form-control" id="templateDescription" name="description" rows="2"></textarea>
            </div>
            <div class="col-md-4">
              <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="templateAutoBalance" name="autoBalanceSpecialAllowance" checked />
                <label class="form-check-label" for="templateAutoBalance">
                  <i class="fas fa-balance-scale text-success me-1"></i>Auto-balance Special Allowance
                </label>
              </div>
            </div>
            <div class="col-md-4">
              <label class="form-label">
                <i class="fas fa-filter text-warning me-1"></i>Applicable to Grade
              </label>
              <input type="text" class="form-control" id="templateGrade" name="applicableToGrade" placeholder="Optional" />
            </div>
            <div class="col-md-4">
              <label class="form-label">
                <i class="fas fa-building text-info me-1"></i>Applicable to Department
              </label>
              <input type="text" class="form-control" id="templateDepartment" name="applicableToDepartment" placeholder="Optional" />
            </div>
          </div>

          <hr>

          {{!-- Components Section --}}
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h6 class="mb-0">
              <i class="fas fa-puzzle-piece text-primary me-2"></i>Salary Components
            </h6>
            <button type="button" class="btn btn-sm btn-outline-primary" id="addComponentBtn">
              <i class="fas fa-plus me-1"></i>Add Component
            </button>
          </div>

          <div id="componentsContainer" class="mb-3">
            {{!-- Components will be added here dynamically --}}
          </div>

          {{!-- Compliance Warnings --}}
          <div id="templateWarnings" class="alert alert-warning" style="display: none;">
            <h6><i class="fas fa-exclamation-triangle me-2"></i>Compliance Warnings</h6>
            <ul id="warningsList" class="mb-0"></ul>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-info" id="validateTemplateBtn">
            <i class="fas fa-check-circle me-2"></i>Validate Template
          </button>
          <button type="submit" class="btn btn-primary">
            <i class="fas fa-save me-2"></i>Save Template
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

{{!-- Component Row Template (Hidden) --}}
<template id="componentRowTemplate">
  <div class="component-row card mb-3" data-component-index="">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-start mb-3">
        <h6 class="mb-0">
          <i class="fas fa-cog text-primary me-2"></i>Component <span class="component-number"></span>
        </h6>
        <button type="button" class="btn btn-sm btn-outline-danger remove-component-btn">
          <i class="fas fa-trash"></i>
        </button>
      </div>
      <div class="row g-3">
        <div class="col-md-3">
          <label class="form-label">Component Name <span class="text-danger">*</span></label>
          <input type="text" class="form-control component-name" required placeholder="e.g., Basic Salary" />
        </div>
        <div class="col-md-3">
          <label class="form-label">Component Code <span class="text-danger">*</span></label>
          <input type="text" class="form-control component-code" required placeholder="BASIC" style="text-transform: uppercase;" />
          <small class="text-muted">Unique uppercase code</small>
        </div>
        <div class="col-md-3">
          <label class="form-label">Type <span class="text-danger">*</span></label>
          <select class="form-select component-type" required>
            <option value="earning">Earning</option>
            <option value="deduction">Deduction</option>
            <option value="employer_contribution">Employer Contribution</option>
          </select>
        </div>
        <div class="col-md-3">
          <label class="form-label">Calculation Type <span class="text-danger">*</span></label>
          <select class="form-select calculation-type" required>
            <option value="fixed">Fixed Amount</option>
            <option value="percent_of_ctc">% of CTC</option>
            <option value="percent_of_basic">% of Basic</option>
            <option value="percent_of_gross">% of Gross</option>
            <option value="formula">Formula</option>
          </select>
        </div>
        <div class="col-md-3">
          <label class="form-label">Value</label>
          <input type="number" step="0.01" class="form-control component-value" placeholder="0.00" />
          <small class="text-muted">Amount or percentage</small>
        </div>
        <div class="col-md-6">
          <label class="form-label">Formula Expression</label>
          <input type="text" class="form-control formula-expression" placeholder="e.g., MIN(0.12*BASIC, 1800)" />
          <small class="text-muted">Use component codes (BASIC, HRA, GROSS, CTC)</small>
        </div>
        <div class="col-md-3">
          <label class="form-label">Display Order</label>
          <input type="number" class="form-control display-order" value="0" />
        </div>
        <div class="col-md-12">
          <div class="row">
            <div class="col-md-2">
              <div class="form-check">
                <input class="form-check-input is-taxable" type="checkbox" checked />
                <label class="form-check-label">Taxable</label>
              </div>
            </div>
            <div class="col-md-2">
              <div class="form-check">
                <input class="form-check-input affects-pf" type="checkbox" />
                <label class="form-check-label">Affects PF</label>
              </div>
            </div>
            <div class="col-md-2">
              <div class="form-check">
                <input class="form-check-input affects-esi" type="checkbox" />
                <label class="form-check-label">Affects ESI</label>
              </div>
            </div>
            <div class="col-md-2">
              <div class="form-check">
                <input class="form-check-input is-statutory" type="checkbox" />
                <label class="form-check-label">Statutory</label>
              </div>
            </div>
            <div class="col-md-2">
              <div class="form-check">
                <input class="form-check-input is-locked" type="checkbox" />
                <label class="form-check-label">Locked</label>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</template>

